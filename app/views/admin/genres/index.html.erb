<br>
 <main>
   <div class="container", align="center">
    <div class="row">
      <div class="col-3">
      	<h4>ジャンル一覧・追加</h4><br>
      </div>
    </div>

      <div class="row">
        <div class="col-6">
          <table style="border:none;" width="400">
            <thead>
             <tr>
               <th><h6>ジャンル名</h6></th>

               <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
                <div class="form-group">
                  <th><%= f.text_field :name %></th>
                </div>

               <th><%= f.submit '新規登録', class: "btn btn-sm btn-primary" %></th>
               <% end %>

             </tr>
            </thead>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-4">
         <div class="ml-5">
          <table class="table">
            <thead class="thead-light">
               <tr>
                 <th>ジャンル</th>
                 <th></th>
               </tr>
             </thead>

               <tbody>
                <% @genres.each do |genre| %>
                 <tr>
                   <td>
                     <span><%= genre.name %></span>
                   </td>
                   <td>
                     <span><%=link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-primary" %></span>
                   </td>
                 </tr>
      　　　　　<% end %>
               </tbody>
          </table>
         </div>
        </div>
      </div>

  </div>
 </main>
