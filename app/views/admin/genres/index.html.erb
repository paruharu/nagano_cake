<br>
 <main>
   <div class="container", align="center">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-4 px-5 px-sm-10">
      	<h5>ジャンル一覧・追加</h5><br>
      </div>
    </div>

      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
          <table style="border:none;" width="400">
            <thread>
             <tr>
               <th><h6>ジャンル名</h6></th>

               <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
                <div class="form-group">
                  <th><%= f.text_field :name %></th>
                </div>

               <th><%= f.submit '新規登録', class: "btn btn-sm btn-primary" %></th>
               <% end %>
             </tr>
            </thread>
          </table>
        </div>
      </div>
    <br>
    <table class="table table-hover table-inverse">
      <thead>
         <tr>
           <th>ジャンル</th>
           <th></th>
         </tr>
       </thead>

         <tbody>
          <% @genres.each do |genre| %>
           <tr>
             <td>
               <span><%= genre.name %></span>
             </td>
             <td>
               <span><%=link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-primary" %></span>
             </td>
           </tr>
　　　　　<% end %>
         </tbody>
    </table>

  </div>
 </main>
