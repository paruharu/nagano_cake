<br>
<main>
  <div class="container", align="center">
   <div class="row">
    <div class="col-md-2">

      <% if @item.errors.any? %>
      <%= @item.errors.count %>エラーが発生しました:
      <% @item.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>

     <div><h4>商品編集</h4></div></br >
    </div>
   </div>

    <%= form_with model:@item, url:"/items/#{@item.id}", local:true do |f| %>
     <div class="form-group">
      <label for="tem_image">商品画像</label>
    　<%= f.attachment_field :image, class:"form-control item_image" %>
     </div>

     <div class="form-group">
      <label for="item_name">商品名</label>
      <%= f.text_field :name, class:"form-control item_name" %>
     </div>

     <div class="form-group">
      <label for="item_introduction">商品名</label>
      <%= f.text_area :introduction, class:"form-control item_introduction" %>
     </div>

     <div class="form-group">
      <label for="item_genre">ジャンル</label>
      <%= f.text_area :genre, class:"form-control item_genre" %>
     </div>

     <div class="form-group">
      <label for="item_price">税込価格</label>
      <%= f.text_area :price, class:"form-control item_price" %>
     </div>

     <div class="form-group">
      <label for="item_is_active">税込価格</label>
      <%= f.text_area :is_active, class:"form-control item_is_active" %>
     </div>

     <div class="form-group">
    　<%= f.submit '編集', class:"btn btn-sm btn-primary" %>
     </div>
    <% end %>


  </div>
</main>