<br>
<main>
  <div class="container", align="center">
   <div class="row">
    <div class="col-md-2">

     <div><h4>商品一覧</h4></div></br >
    </div>
   </div>

   <!--右寄せにならない-->
   <div class="row">
    <div class="col-lg-12">
     <tr class="text-right">＋追加</tr><br>
    </div>
   </div>

   <div class="row">
     <div class="col-md-12">
       <table class="table">
         <thead>
           <tr>
             <th>商品ID</th>
             <th>商品名</th>
             <th>税抜価格</th>
             <th>ジャンル</th>
             <th>ステータス</th>
           </tr>
         </thead>
         <tbody>
          <% @items.each do |item| %>
           <tr>
             <td width="100">
               商品ID
             </td>
             <td width="220">
               <%= item.name %>
             </td>
             <td width="120">
               <%= item.price %>
             </td>
             <td width="150">
               <%= item.genre %>
             </td>
             <td width="130">
               <%= item.is_active %>
             </td>
           </tr>
         </tbody>
         <% end %>
       </table>


    <div class="pagination">
     <p>1</p>
     <p>2</p>
     <p>3</p>
     <p>Next></p>
     <p>Last>></p>
    </div>

  </div>
</main>