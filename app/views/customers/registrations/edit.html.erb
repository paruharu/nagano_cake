<br>
<main>
  <div class="container", align="center">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-3">



      <div><h4>会員情報編集</h4></div><br />
    </div>
   </div>

    <!--<= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>-->
    <!--  <= render "customers/shared/error_messages", resource: resource %>-->

    <%= form_with model:@customer, local:true do |f| %>

    　<table style="border:none;" >
    　  <thead>

    　   <tr>
    　     <th width="330"></th>
    　     <th></th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　    <th>氏名</th>
    　    <th> <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></th>
    　    <th><%= f.text_field :last_name, autofocus: true, autocomplete: "first_name"  %></th>
    　    <th></th>
    　   </tr>

    　   <tr>
    　    <th>フリガナ</th>
    　    <th><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></th>
    　    <th><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"  %></th>
    　    <th></th>
    　   </tr>

    　   <tr>
    　     <th>郵便番号</th>
    　     <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　     <th>住所</th>
    　     <th colspan="3" ><%= f.text_field :address, autofocus: true, autocomplete: "address" %></th>
      　   <td></td>
      　   <td></td>
    　   </tr>

    　   <tr>
    　     <th>電話番号</th>
    　     <th><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　     <th>メールアドレス</th>
    　     <th>
    　       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    　        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
             <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
             <% end %>
    　     </th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　     <th>新しいパスワード(変更する場合のみ入力)</th>
    　     <th>
    　       <%= f.password_field :password, autocomplete: "new-password" %>
     　     </th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　     <td>
    　      <% if @minimum_password_length %>
           最低<%= @minimum_password_length %> 桁以上
           <% end %>
          </td>
          <th></th>
          <th></th>
          <th></th>
    　   </tr>

    　   <tr>
    　     <th>新しいパスワード(再入力)</th>
    　     <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
    　     <th></th>
    　     <th></th>
    　   </tr>

    　   <tr>
    　     <th>現在のパスワード</th>
    　     <th><%= f.password_field :current_password, autocomplete: "current-password" %></th>
    　     <th></th>
    　     <th></th>
    　   </tr>

        <br>
        <tr>
          <th></th>
          <th><%= f.submit "編集内容を保存", class:"btn btn-sm btn-primary" %></th>
          <% end %>
          <th><%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-sm btn-primary" %></th>
          <th><%= link_to "戻る", :back %></th>
        </tr>

      </table>

 </div>
</main>

