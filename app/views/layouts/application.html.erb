<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-white bg-dark">
      <div class="container">
       <ul class="navbar-nav ml-auto">

    <% if admin_signed_in? %>
            <li>
             <%= link_to "商品一覧", admin_items_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
             <%= link_to "会員一覧", admin_customers_path,  class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
             <%= link_to "注文履歴一覧", admin_root_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
             <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
             <%= link_to "ログアウト", destroy_admin_session_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px', method: :delete %>
            </li>

      <% elsif customer_signed_in? %>
            <li>
              <%= link_to "マイページ", customers_my_page_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "カート", cart_items_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px', method: :delete %>
            </li>

     <% else %>
          <li>
              <%= link_to "About", about_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>
            <li>
              <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-default btn-lg btn-block', class: 'btn btn-outline-info', style: 'margin: 15px' %>
            </li>


    <% end %>

       </ul>
      </div>
     </nav>
    </header>

    <%= notice %>
    <%= yield %>
  </body>
</html>