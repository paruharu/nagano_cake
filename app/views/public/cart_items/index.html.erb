<br>
<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h4>ショッピングカート</h4>
      </div>
      <div class="col-9">
        <div class="mx-3"><%=link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-sm btn-primary" %>
        <%=link_to "買い物を続ける", items_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
   </div>
   <br>

   <table border="1">
     <thead class="thead-light">
       <tr>
         <th>商品名</div></th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
         <th></div></th>
       </tr>
     </thead>
       <% @subtotal = 0 %>
       <% @cart_items.each do |cart_item| %>
       <tbody>
         <tr>
           <th>
            <div class="mx-3">
             <%= cart_item.item.name %>
            </div>
           </th>
           <th>
            <%= cart_item.item.with_tax_price %>円
           </th>
           <th>
            <div class="mx-3">
             <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local:true do |f| %>
             <%= f.select :amount, *[1..5] %>
             <%= f.submit '変更'%>
             <% end %>
            </div>
           </th>
           <th><div class="mx-3"><%= cart_item.item.with_tax_price * cart_item.amount %>円<% @subtotal += cart_item.item.with_tax_price * cart_item.amount %></div></th>
           <th><div class="mx-3"><%=link_to "削除する", cart_item_path(cart_item.id), method: :delete, data: {confirm: '削除してよいですか？'}, class: "btn btn-sm btn-primary" %></div></th>
         </tr>
       </tbody>
       <% end %>
   </table>
   <br>

   <div class="row">
    <div class="col-9">
       <table border="1">
         <th><div class="mx-3">合計金額</div></th>
         <th><div class="mx-3"><%= @subtotal %>円</div></th>

       </table>
    </div>
   </div>
    <br>
   <div class="row">
    <div class="col-9">
      <%=link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-primary btn-lg" %>
    </div>
   </div>

  </div>
</main>