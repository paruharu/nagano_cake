<br>
<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h4>ショッピングカート</h4>
      </div>
      <div class="col-9">
        <div class="mx-3"><%=link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-sm btn-primary" %></div>
      </div>
   </div>

   <% @cart_items.each do |cart_item| %>
   <table border="1">
     <thead>
       <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
         <th></th>
       </tr>

       <tbody>
         <tr>
           <th>
             <%= cart_item.item %>
           </th>
           <th><%= cart_item.item.price.add_tax_sales_price.to_s(:dalimited) %></th>
           <th><%= cart_item.amount %></th>
           <th><%= cart_item.item %></th>
           <th><div class="mx-3"><%=link_to "削除する", cart_items_path, class: "btn btn-sm btn-primary" %></div></th>
         </tr>
       </tbody>
     </thead>
   </table>
   <% end %>

   <div class="row">
    <div class="col-4, m-4">
     <%=link_to "買い物を続ける", items_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="col-4, my-4">
       <table border="1">
         <th><div class="mx-3">合計金額</div></th>
         <th><div class="mx-3">1,000</div></th>
       </table>
    </div>
   </div>

   <div class="row text-center">
    <div class="col">
      <%=link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-primary btn-lg" %>
    </div>
   </div>

  </div>
</main>