<main>
  <div class="container", align="center">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-3">

     <% if @customer.errors.any? %>
     <%= @customer.errors.count %>error prohibited this obj from being saved:
     <% @customer.errors.full_messages.each do |message| %>
     <%= message %>
     <% end %>
     <% end %>

      <div><h4>マイページ</h4></div><br />
    </div>
   </div>

    <div class="row">
     <div class="col-lg-6">
       <div><h5>登録情報</h5></div>
       <div>編集する</div>
     </div>
    </div>

    <div class="row">
     <div class="col-lg-6">
       <table>

         <tr>
           <th>氏名</th>
           <th><%= @customer.last_name %><%= @customer.first_name %></th>
         </tr>

         <tr>
           <th>カナ</th>
           <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
         </tr>

         <tr>
           <th>郵便番号</th>
           <th><%= @customer.postal_code %></th>
         </tr>

         <tr>
           <th>住所</th>
           <th><%= @customer.address %></th>
         </tr>

         <tr>
           <th>電話番号</th>
           <th><%= @customer.telephone_number %></th>
         </tr>

         <tr>
           <th>メールアドレス</th>
           <th><%= @customer.email %></th>
         </tr>
       </table>

     </div>
    </div>

    <div class="row">
     <div class="col-lg-6">
       <div><h5>配送先</h5></div>
       <div>一覧を見る</div>
     </div>
    </div>

    <div class="row">
     <div class="col-lg-6">
       <div><h5>注文履歴</h5></div>
       <div>一覧を見る</div>
     </div>
    </div>

  </div>
</main>