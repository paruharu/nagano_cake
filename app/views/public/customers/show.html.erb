<br>
<main>
  <div class="container", align="center">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-3">

     <% if @customer.errors.any? %>
     <%= @customer.errors.count %>error prohibited this obj from being saved:
     <% @customer.errors.full_messages.each do |message| %>
     <%= message %>
     <% end %>
     <% end %>

      <div><h4>マイページ</h4></div><br />
    </div>
   </div>

    <div class="row">
     <div class="col-4">
       <h5>
           <div class='d-flex'>
            <strong>登録情報</strong>
            <div class="mr-3"></div><%= link_to "編集する", edit_customers_path, class:"btn btn-sm btn-primary" %>
       　    </div>

       </h5>
     </div>
    </div>

    <div class="row">
     <div class="col-lg-6">
       <table class="table table-bordered">

         <tr>
           <th width="300">氏名</th>
           <th width="800">
            <%= @customer.last_name %><%= @customer.first_name %>
           </th>
         </tr>

         <tr>
           <th>カナ</th>
           <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
         </tr>

         <tr>
           <th>郵便番号</th>
           <th><%= @customer.postal_code %></th>
         </tr>

         <tr>
           <th>住所</th>
           <th><%= @customer.address %></th>
         </tr>

         <tr>
           <th>電話番号</th>
           <th><%= @customer.telephone_number %></th>
         </tr>

         <tr>
           <th>メールアドレス</th>
           <th><%= @customer.email %></th>
         </tr>
       </table>

     </div>
    </div>

    <div class="row">
     <div class="col-4">
       <h5>
        <div class='d-flex'>
          <strong>配送先一覧</strong>
       　　<div class="mr-1"><%= link_to "一覧を見る", addresses_path, class:"btn btn-sm btn-primary" %></div>
       　　</div>
       </h5>
     </div>
    </div>

    <div class="row">
     <div class="col-4">
       <h5>
         <div class='d-flex'>
          <strong>注文履歴</strong>
       　　　<div class="mr-1"><%= link_to "一覧を見る", orders_path, class:"btn btn-sm btn-primary" %></div>
          </div>
       </h5>
     </div>
    </div>

  </div>
</main>