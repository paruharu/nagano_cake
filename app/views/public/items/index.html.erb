<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-md-4">
        <div>
          <h4><strong>商品一覧</strong></h4><h6>(全●件)</h6>
        </div>

          <div class="d-flex">
          <% @items.each do |item| %>
           <div class="w-25">
           <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
           <br><%= link_to item_path(item.id) do %><%= item.name %><% end %>
           <br><%= item.price %>
           </div>
          <% end %>
          </div>

      </div>
   </div>



  </div>
</main>