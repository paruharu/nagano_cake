<br>
<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-8">
          <h4><strong>商品一覧</strong></h4>
          <br>
      </div>
   </div>

   <div class="row">
      <div class="d-md-inline-flex">
        <% @items.each do |item| %>
        <div class="mx-3">
        <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <br><%= link_to item_path(item.id) do %><%= item.name %><% end %>
        <br>￥<%= item.price %>
        </div>
        <% end %>
      </div>
   </div>

  </div>
</main>