<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-4">
       <%=attachment_image_tag @item, :image, size: '240x180', fallback: "no_image.jpg" %>
     </div>

     <div class="col-md-4">
       <h4><strong><%= @item.name %></h4></strong>
       <h5><%= @item.introduction %></h5>
       <br>
       <br>
       <h4><strong><%= @item.with_tax_price%>円(税込)</strong></h4>
       <br>

       <div class="d-flex">
         <%= form_with model: @cart_item, url:cart_items_path, local:true do |f| %>
         <%= f.select :amount, *[1..5], { include_blank: '-個数選択-' }, {required: true } %></span>
         <%= f.hidden_field :item_id, value: @item.id %>
         <%= f.submit 'カートに入れる'%>
         <% end %>
       </div>
     </div>

  </div>
</main>