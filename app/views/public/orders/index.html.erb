<br>
<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h4>注文情報入力</h4>
      </div>
   </div>

    <table border="1">
       <thead>
         <tr>
           <th>注文日</th>
           <th>配送先</th>
           <th>注文商品</th>
           <th>支払金額</th>
           <th>ステータス</th>
           <th>注文詳細</th>
         </tr>

         <tbody>
         <% @orders.each do |order| %>
           <tr>
             <th><%= order.created_at%></th>
             <th>
               <%= order.postal_code%>
               <%= order.address%>
               <%= order.name%>
             </th>
             <th>

             </th>
             <th></th>
             <th><%= order.status %></th>
             <th><div class="mx-3"><%=link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></div></th>
           </tr>
         <% end %>
         </tbody>
       </thead>
     </table>


  </div>
</main>