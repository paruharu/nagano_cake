<br>
<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h4>注文履歴一覧</h4>
      </div>
   </div>

    <table border="1">
       <thead>
         <tr>
           <th>注文日</th>
           <th>配送先</th>
           <th>注文商品</th>
           <th>支払金額</th>
           <th>ステータス</th>
           <th>注文詳細</th>
         </tr>

         <tbody>
         <% @order.each do |order| %>
           <tr>
             <td><div><%= order.created_at.to_s(:datetime_jp) %></div><td>
               <%= order.postal_code%>
               <%= order.address%>
               <%= order.name%>
             </td>
             <td>
               <% order.order_details.each do |order_detail| %>
               <%= order_detail.item.name%>
               <% end %>
             </td>
             <td></td>
             <td><%= order.status %></td>
             <th><div class="mx-3"><%=link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></div></th>
           </tr>
         <% end %>
         </tbody>
       </thead>
     </table>


  </div>
</main>